@model TrivagoMVC.Models.EditarHotelViewModel

<head>
<link rel="preconnect" href="https://fonts.googleapis.com"> 
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin> 
<link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">

@{
    ViewData["Title"] = "Editar Hotel";
}
<style>
body{
    background: white;
    font-family: "Roboto Condensed", sans-serif !important;
}
</style>
</head>

<body>
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Editar Hotel</h3>
                </div>

                <div class="card-body">

                    <form asp-action="EditarHotel" method="post">
                        @Html.AntiForgeryToken()

                        <input type="hidden" asp-for="idHotel" />

                        <!-- VALIDACIÃ“N -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Datos.Nombre" class="form-label"></label>
                            <input asp-for="Datos.Nombre" class="form-control" />
                            <span asp-validation-for="Datos.Nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Datos.idCiudad" class="form-label">Ciudad</label>
                            <select asp-for="Datos.idCiudad" asp-items="Model.Ciudades" class="form-select">
                                <option value="">Seleccione una ciudad</option>
                            </select>
                            <span asp-validation-for="Datos.idCiudad" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Datos.Direccion" class="form-label"></label>
                            <input asp-for="Datos.Direccion" class="form-control" />
                            <span asp-validation-for="Datos.Direccion" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Datos.Telefono" class="form-label"></label>
                            <input asp-for="Datos.Telefono" class="form-control" />
                            <span asp-validation-for="Datos.Telefono" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Datos.URL" class="form-label"></label>
                            <input asp-for="Datos.URL" class="form-control" />
                            <span asp-validation-for="Datos.URL" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Guardar cambios</button>
                            <a asp-action="DetalleHotelLista" class="btn btn-secondary">Cancelar</a>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
