@model List<TrivagoMVC.Models.HotelConCiudadViewModel>
<head>
<link rel="preconnect" href="https://fonts.googleapis.com"> 
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin> 
<link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">

<style>

body{
    background: white;
    font-family: "Roboto Condensed", sans-serif !important;
}
</style>

</head>
<body>
@{
    ViewData["Title"] = "Detalle de Hoteles";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Detalle de Hoteles</h2>
        <a asp-action="AltaHotel" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nuevo Hotel
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var hotel in Model)
            {
                <div class="col-md-6 col-lg-4 mb-3">
                    <div class="card h-100 shadow-sm"
                         style="cursor:pointer"
                         onclick="window.location.href='@Url.Action("DetalleHotel", new { idHotel = hotel.idHotel, idCiudad = hotel.idCiudad })'">
                        <div class="card-body">
                            <h5 class="card-title">@hotel.NombreHotel</h5>
                            <p class="mb-1"><small>ID Hotel: @hotel.idHotel</small></p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">No hay hoteles registrados. <a asp-action="AltaHotel">Agregar el primer hotel</a></div>
    }
</div>

<div class="text-center mt-4">
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Volver al Inicio</a>
</div>
</body>