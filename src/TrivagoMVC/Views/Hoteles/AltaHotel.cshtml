@model TrivagoMVC.Models.AltaHotelViewModel

<head>
<link rel="preconnect" href="https://fonts.googleapis.com"> 
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin> 
<link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">

@{
    ViewData["Title"] = "Alta de Hotel";
}
<style>
body{
    background: white;
    font-family: "Roboto Condensed", sans-serif !important;
}
</style>
</head>

<body>
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Alta de Hotel</h3>
                </div>

                <div class="card-body">
                    <form asp-action="AltaHotel" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="NuevoHotel.Nombre" class="form-label"></label>
                            <input asp-for="NuevoHotel.Nombre" class="form-control" placeholder="Ej: Hotel Plaza" />
                            <span asp-validation-for="NuevoHotel.Nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NuevoHotel.idCiudad" class="form-label">Ciudad</label>
                            <select asp-for="NuevoHotel.idCiudad" asp-items="Model.Ciudades" class="form-select">
                                <option value="">Seleccione una ciudad</option>
                            </select>
                            <span asp-validation-for="NuevoHotel.idCiudad" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NuevoHotel.Direccion" class="form-label"></label>
                            <input asp-for="NuevoHotel.Direccion" class="form-control" placeholder="Ej: Av. Principal 123" />
                            <span asp-validation-for="NuevoHotel.Direccion" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NuevoHotel.Telefono" class="form-label"></label>

                            <input asp-for="NuevoHotel.Telefono"
                                   type="tel"
                                   class="form-control"
                                   placeholder="Ej: +54 11 1234-5678"
                                   pattern="\+?[0-9]{8,15}"
                                   title="Solo números (8 a 15 dígitos), puede incluir + al inicio" />

                            <span asp-validation-for="NuevoHotel.Telefono" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NuevoHotel.URL" class="form-label"></label>
                            <input asp-for="NuevoHotel.URL" class="form-control" placeholder="Ej: https://www.hotelplaza.com" />
                            <span asp-validation-for="NuevoHotel.URL" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Guardar Hotel</button>
                            <a asp-action="ListadoHotel" class="btn btn-secondary">Cancelar</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
