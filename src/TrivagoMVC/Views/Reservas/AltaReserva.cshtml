@model TrivagoMVC.Models.AltaReservaViewModel

@{
    ViewData["Title"] = "Alta de Reserva";
}

<link rel="preconnect" href="https://fonts.googleapis.com"> 
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin> 
<link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed&display=swap" rel="stylesheet">

<style>
    body { font-family: "Roboto Condensed", sans-serif; background: white; }

    option{
        color: #000;
    }
</style>

<body>
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Alta de Reserva</h3>
                </div>
                <div class="card-body">
                    <form asp-action="AltaReserva" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- HOTEL -->
                        <div class="mb-3">
                            <label class="form-label">Hotel</label>
                            <select id="HotelId" asp-for="Reserva.idHotel" class="form-select">
                                <option value="">Seleccione un hotel</option>
                                @foreach(var h in Model.Hoteles)
                                {
                                    <option value="@h.Value">@h.Text</option>
                                }
                            </select>
                        </div>

                        <!-- HABITACIÓN -->
                        <div class="mb-3">
                            <label class="form-label">Habitación</label>
                            <select id="HabitacionId" asp-for="Reserva.idHabitacion" class="form-select">
                                <option value="">Seleccione una habitación</option>
                            </select>
                        </div>

                        <!-- PRECIO AUTO -->
                        <div class="mb-3">
                            <label class="form-label">Precio</label>
                            <input type="text" id="Precio" class="form-control" readonly />
                        </div>

                        <!-- FECHAS -->
                        <div class="mb-3">
                            <label class="form-label">Fecha de Entrada</label>
                            <input asp-for="Reserva.Entrada" type="date" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")"/>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Fecha de Salida</label>
                            <input asp-for="Reserva.Salida" type="date" class="form-control" value="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")"/>
                        </div>

                        <!-- TELÉFONO -->
                        <div class="mb-3">
                            <label asp-for="Reserva.Telefono" class="form-label"></label>

                            <input asp-for="Reserva.Telefono"
                                type="tel"
                                class="form-control"
                                value=""
                                placeholder="Ej: +54 11 1234-5678"
                                pattern="\+?[0-9]{8,15}"
                                title="Solo números (8 a 15 dígitos), puede incluir + al inicio" />

                            <span asp-validation-for="Reserva.Telefono" class="text-danger"></span>
                        </div>


                        <!-- MÉTODO DE PAGO -->
                        <div class="mb-3">
                            <label class="form-label">Método de Pago</label>
                            <select asp-for="Reserva.idMetodoPago" asp-items="Model.MetodosPago" class="form-select">
                                <option value="">Seleccione un método de pago</option>
                            </select>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Guardar Reserva</button>
                            <a asp-action="ListadoReserva" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {

            // Cambiar hotel => cargar habitaciones
            $('#HotelId').change(function () {
                var idHotel = $(this).val();

                $('#HabitacionId').empty().append('<option value="">Seleccione una habitación</option>');
                $('#Precio').val('');

                if (idHotel) {
                    $.getJSON('@Url.Action("HabitacionesPorHotel")', { idHotel: idHotel }, function (data) {

                        $.each(data, function (i, h) {
                            $('#HabitacionId').append(
                                $('<option>', {
                                    value: h.id,
                                    text: h.nombre,   // <<--- ESTE era tu problema
                                    'data-precio': h.precio
                                })
                            );
                        });
                    });
                }
            });

            // Cambiar habitación => mostrar precio
            $('#HabitacionId').change(function () {
                var precio = $('#HabitacionId option:selected').data('precio');
                $('#Precio').val(precio ? "$" + precio : "");
            });

        });
    </script>
}


