@model TrivagoMVC.Models.UsuarioViewModel
<head>
<link rel="preconnect" href="https://fonts.googleapis.com"> 
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin> 
<link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">

<style>

body{
    background: white;
    font-family: "Roboto Condensed", sans-serif !important;
}
</style>

</head>
<body>
<div class="container py-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Listado de Usuarios</h2>
        <a asp-action="AltaUsuario" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nuevo Usuario
        </a>
    </div>

    @if (Model.ListaUsuarios.Any())
    {
        <div class="row">
            @foreach (var usuario in Model.ListaUsuarios)
            {
                <div class="col-md-6 col-lg-3 mb-3">
                    <div class="card shadow-sm text-center h-100">
                        <div class="card-body">
                            <div class="mb-3">
                                <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center" 
                                     style="width: 60px; height: 60px; font-size: 24px;">
                                    @usuario.Nombre.Substring(0,1).ToUpper()
                                </div>
                            </div>
                            <h5 class="card-title">@usuario.Nombre @usuario.Apellido</h5>
                            <div class="d-flex justify-content-center gap-2 mt-3">
                                <a class="btn btn-warning" href="@Url.Action("EditarUsuario", "Usuarios", new { idUsuario = usuario.idUsuario })">
                                    Editar
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <p class="mb-0">No hay usuarios registrados. <a asp-action="AltaUsuario">Agregar el primer usuario</a></p>
        </div>
    }
</div>
</body>
