@model TrivagoMVC.Models.UsuarioViewModel

@{
    ViewData["Title"] = "Editar Usuario";
}

<h2>Editar Usuario</h2>

<form asp-action="EditarUsuario" method="post">
    <input type="hidden" asp-for="Usuario.idUsuario" />

    <div class="form-group">
        <label asp-for="Usuario.Nombre"></label>
        <input class="form-control" asp-for="Usuario.Nombre" />
    </div>

    <div class="form-group">
        <label asp-for="Usuario.Apellido"></label>
        <input class="form-control" asp-for="Usuario.Apellido" />
    </div>

    <div class="form-group">
        <label asp-for="Usuario.Mail"></label>
        <input class="form-control" asp-for="Usuario.Mail" />
    </div>

    <div class="form-group">
        <label asp-for="Contrasena">Contraseña (dejar vacío si no se cambia)</label>
        <input type="password" class="form-control" asp-for="Contrasena" />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Guardar</button>
    <a asp-action="ListadoUsuario" class="btn btn-secondary mt-2">Cancelar</a>
</form>
