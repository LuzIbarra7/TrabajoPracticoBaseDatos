@model TrivagoMVC.Models.UsuarioViewModel

<head>
<link rel="preconnect" href="https://fonts.googleapis.com"> 
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin> 
<link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">

<style>
    body {
        background: white;
        font-family: "Roboto Condensed", sans-serif !important;
    }
</style>
</head>

<body>
@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Editar Usuario</h3>
                </div>

                <div class="card-body">
                    <form asp-action="EditarUsuario" method="post">
                        @Html.AntiForgeryToken()

                        <input type="hidden" asp-for="Usuario.idUsuario" />

                        <div class="mb-3">
                            <label asp-for="Usuario.Nombre" class="form-label">Nombre</label>
                            <input asp-for="Usuario.Nombre" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Usuario.Apellido" class="form-label">Apellido</label>
                            <input asp-for="Usuario.Apellido" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Usuario.Mail" class="form-label">Email</label>
                            <input asp-for="Usuario.Mail" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Contrasena" class="form-label">
                                Contraseña (dejar vacío si no se cambia)
                            </label>
                            <input type="password" asp-for="Contrasena" class="form-control" />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                Guardar cambios
                            </button>
                            <a asp-action="ListadoUsuario" class="btn btn-secondary">
                                Cancelar
                            </a>
                        </div>

                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
