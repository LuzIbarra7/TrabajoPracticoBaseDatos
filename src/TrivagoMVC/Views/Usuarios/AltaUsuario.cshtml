@model TrivagoMVC.ViewModels.AltaUsuarioViewModel

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Alta de Usuario</h3>
                </div>
                <div class="card-body">
                    <form asp-action="AltaUsuario" method="post">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="NuevoUsuario.Nombre" class="form-label">Nombre</label>
                                <input asp-for="NuevoUsuario.Nombre" class="form-control" placeholder="Nombre"/>
                                <span asp-validation-for="NuevoUsuario.Nombre" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="NuevoUsuario.Apellido" class="form-label">Apellido</label>
                                <input asp-for="NuevoUsuario.Apellido" class="form-control" placeholder="Apellido"/>
                                <span asp-validation-for="NuevoUsuario.Apellido" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NuevoUsuario.Mail" class="form-label">Gmail</label>
                            <input asp-for="NuevoUsuario.Mail" type="email" class="form-control" placeholder="Gmail"/>
                            <span asp-validation-for="NuevoUsuario.Mail" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NuevoUsuario.Contrasena" class="form-label">Contraseña</label>
                            <input asp-for="NuevoUsuario.Contrasena" type="password" class="form-control" placeholder="Contraseña"/>
                            <span asp-validation-for="NuevoUsuario.Contrasena" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Guardar Usuario</button>
                            <a asp-action="DetalleUsuarioLista" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
