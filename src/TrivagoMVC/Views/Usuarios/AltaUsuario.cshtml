@model TrivagoMVC.Models.UsuarioViewModel
<head>
<link rel="preconnect" href="https://fonts.googleapis.com"> 
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin> 
<link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">

<style>

body{
    background: white;
    font-family: "Roboto Condensed", sans-serif !important;
}
</style>

</head>
<body>
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Alta de Usuario</h3>
                </div>
                <div class="card-body">
                    <form asp-action="AltaUsuario" method="post">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Usuario.Nombre" class="form-label">Nombre</label>
                                <input asp-for="Usuario.Nombre" class="form-control" placeholder="Nombre"/>
                                <span asp-validation-for="Usuario.Nombre" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Usuario.Apellido" class="form-label">Apellido</label>
                                <input asp-for="Usuario.Apellido" class="form-control" placeholder="Apellido"/>
                                <span asp-validation-for="Usuario.Apellido" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Usuario.Mail" class="form-label">Gmail</label>
                            <input asp-for="Usuario.Mail" type="email" class="form-control" placeholder="Gmail"/>
                            <span asp-validation-for="Usuario.Mail" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Usuario.Contrasena" class="form-label">Contraseña</label>
                            <input asp-for="Usuario.Contrasena" type="password" class="form-control" placeholder="Contraseña"/>
                            <span asp-validation-for="Usuario.Contrasena" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Guardar Usuario</button>
                            <a asp-action="ListadoUsuario" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
