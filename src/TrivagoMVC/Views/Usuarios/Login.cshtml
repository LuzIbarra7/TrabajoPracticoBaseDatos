@model TrivagoMVC.Models.LoginViewModel
<head>
    @{
        ViewData["Title"] = "Iniciar Sesión";
    }

<link rel="preconnect" href="https://fonts.googleapis.com"> 
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin> 
<link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">

<style>

body{
    background: white;
    font-family: "Roboto Condensed", sans-serif !important;
}

.login-card {
    max-width: 380px;   
    width: 100%;        
    margin: auto;      
}

</style>

</head>
<body>
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 login-card">

            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">Iniciar Sesión</h3>
                </div>
                <div class="card-body">

                    @if (!string.IsNullOrEmpty(ViewBag.Error))
                    {
                        <div class="alert alert-danger text-center">
                            @ViewBag.Error
                        </div>
                    }

                    <form method="post" asp-action="Login">

                        <div class="mb-3">
                            <label>Email</label>
                            <input asp-for="Mail" type="email" class="form-control" required />
                            <span asp-validation-for="Mail" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label>Contraseña</label>
                            <input asp-for="Contrasena" type="password" class="form-control" required />
                            <span asp-validation-for="Contrasena" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                Ingresar
                            </button>
                        </div>

                        <div class="text-center mt-3">
                            <a href="/Usuarios/AltaUsuario">Crear cuenta</a>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>
</body>
