@model TrivagoMVC.Models.UsuarioViewModel


<head>
<link rel="preconnect" href="https://fonts.googleapis.com"> 
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin> 
<link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">

<style>

body{
    background: white;
    font-family: "Roboto Condensed", sans-serif !important;
}
</style>

</head>
<body>
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Detalle de Usuarios</h2>
        <a asp-action="AltaUsuario" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nuevo Usuario
        </a>
    </div>

    @if (Model.ListaUsuarios.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="list-group">
                    @foreach (var usuario in Model.ListaUsuarios)
                    {
                        <a href="@Url.Action("DetalleUsuario", new { idUsuario = usuario.idUsuario })" 
                           class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 align-items-center">
                                <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center me-3" 
                                     style="width: 40px; height: 40px;">
                                    @usuario.Nombre.Substring(0, 1).ToUpper()
                                </div>
                                <div>
                                    <h6 class="mb-0">@usuario.Nombre @usuario.Apellido</h6>
                                </div>
                            </div>
                        </a>
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            No hay usuarios registrados. <a asp-action="AltaUsuario">Agregar el primer usuario</a>
        </div>
    }

    <div class="text-center mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Volver al Inicio</a>
    </div>
</div>
</body>
