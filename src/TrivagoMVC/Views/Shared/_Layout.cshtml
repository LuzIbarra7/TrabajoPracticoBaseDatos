<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trivago </title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    <!-- Google Font (Inter) -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Tu CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body {
            font-family: 'Inter', system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
            padding-top: 90px;
        }

        .travel-navbar {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(12px);
            border-bottom: 1px solid #e5eaf1;
            box-shadow: 0 4px 16px rgba(0,0,0,0.05);
        }

        .logo-box {
            width: 38px;
            height: 38px;
            background: #0d6efd;
            color: white;
            border-radius: 10px;
            display: flex;
            justify-content: center;
            align-items: center;
            font-weight: 700;
            font-size: 20px;
        }

        .brand-text {
            font-size: 22px;
            font-weight: 700;
            color: #1e293b;
        }

        .menu-link {
            font-weight: 500;
            color: #475569 !important;
            transition: color .2s ease;
        }

        .menu-link:hover {
            color: #0d6efd !important;
        }

        /* Dropdown animado desktop */
        .fade-menu {
            border-radius: 12px;
            border: 1px solid #e2e8f0;
            box-shadow: 0 12px 22px rgba(0,0,0,0.08);
            opacity: 0;
            transform: translateY(10px);
            transition: all .25s ease;
            display: block;
            visibility: hidden;
        }

        .nav-item.dropdown:hover > .fade-menu {
            opacity: 1;
            transform: translateY(0px);
            visibility: visible;
        }

        .btn-register {
            padding: 8px 20px;
            background: #0f172a;
            color: white !important;
            border-radius: 20px;
            font-weight: 600;
            text-decoration: none;
            transition: background .2s ease;
        }

        .btn-register:hover {
            background: #1e293b;
        }

        /* ----- FIX PARA MÓVILES ----- */
        @@media (max-width: 991px) {

            /* Ocultar dropdowns por defecto en móvil */
            .dropdown-menu {
                display: none;
                opacity: 1 !important;
                visibility: visible !important;
                transform: none !important;
                box-shadow: none !important;
                border: none !important;
            }

            /* Cuando Bootstrap abre el menú */
            .dropdown-menu.show {
                display: block;
            }

            .navbar-nav {
                padding-top: 20px;
            }
        }
    </style>
</head>

<body>
<header>
    <nav class="navbar navbar-expand-lg travel-navbar fixed-top p-3">
        <div class="container-fluid d-flex align-items-center justify-content-between">

            <!-- LOGO -->
            <a class="navbar-brand d-flex align-items-center gap-2" asp-controller="Home" asp-action="Index">
                <div class="logo-box">T</div>
                <span class="brand-text">Trivago</span>
            </a>

            <!-- Hamburguesa -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                <span class="fa-solid fa-bars"></span>
            </button>

            <!-- MENÚ -->
            <div class="collapse navbar-collapse" id="mainNavbar">

                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="navbar-nav mx-auto gap-lg-4">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle menu-link" data-bs-toggle="dropdown" href="#">Hoteles</a>
                            <ul class="dropdown-menu fade-menu">
                                <li><a class="dropdown-item" asp-controller="Hoteles" asp-action="AltaHotel">Alta</a></li>
                                <li><a class="dropdown-item" asp-controller="Hoteles" asp-action="ListadoHotel">Listado</a></li>
                                <li><a class="dropdown-item" asp-controller="Hoteles" asp-action="DetalleHotelLista">Detalle</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle menu-link" data-bs-toggle="dropdown" href="#">Ciudades</a>
                            <ul class="dropdown-menu fade-menu">
                                <li><a class="dropdown-item" asp-controller="Ciudades" asp-action="AltaCiudad">Alta</a></li>
                                <li><a class="dropdown-item" asp-controller="Ciudades" asp-action="ListadoCiudad">Listado</a></li>
                                <li><a class="dropdown-item" asp-controller="Ciudades" asp-action="DetalleCiudadLista">Detalle</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle menu-link" data-bs-toggle="dropdown" href="#">Usuarios</a>
                            <ul class="dropdown-menu fade-menu">
                                <li><a class="dropdown-item" asp-controller="Usuarios" asp-action="AltaUsuario">Alta</a></li>
                                <li><a class="dropdown-item" asp-controller="Usuarios" asp-action="ListadoUsuario">Listado</a></li>
                                <li><a class="dropdown-item" asp-controller="Usuarios" asp-action="DetalleUsuarioLista">Detalle</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle menu-link" data-bs-toggle="dropdown" href="#">Reservas</a>
                            <ul class="dropdown-menu fade-menu">
                                <li><a class="dropdown-item" asp-controller="Reservas" asp-action="AltaReserva">Alta</a></li>
                                <li><a class="dropdown-item" asp-controller="Reservas" asp-action="ListadoReserva">Listado</a></li>
                            </ul>
                        </li>
                    </ul>
                }

                <!-- BOTONES DERECHA -->
                <div class="ms-auto d-flex gap-3 mt-3 mt-lg-0">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="btn btn-danger" asp-controller="Usuarios" asp-action="Logout">Cerrar sesión</a>
                    }
                    else
                    {
                        <a class="login-link" asp-controller="Usuarios" asp-action="Login">Iniciar sesión</a>
                        <a class="btn-register" asp-controller="Usuarios" asp-action="AltaUsuario">Registrarse</a>
                    }
                </div>

            </div>
        </div>
    </nav>
</header>

<div class="content-offset">
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
