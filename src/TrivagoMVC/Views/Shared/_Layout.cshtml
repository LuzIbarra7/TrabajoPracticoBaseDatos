<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TrivagoMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<style>
    body {
        background-color: rgb(255, 208, 192);
    }
</style>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TrivagoMVC</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>

                        <!-- Dropdown de Hoteles -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="hotelesDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Hoteles
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="hotelesDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="AltaHotel">Alta</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="DetalleHotel">Detalle</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="ListadoHotel">Listado</a></li>
                            </ul>
                        </li>

                        <!-- Dropdown de Ciudades -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="ciudadesDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Ciudades
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="ciudadesDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="AltaCiudad">Alta</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="DetalleCiudad">Detalle</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="ListadoCiudad">Listado</a></li>
                            </ul>
                        </li>

                        <!-- Dropdown de Usuarios -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="usuariosDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Usuarios
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="usuariosDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="AltaUsuario">Alta</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="DetalleUsuario">Detalle</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="ListadoUsuario">Listado</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - TrivagoMVC
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>