@model TrivagoMVC.Models.CiudadViewModel

<div class="container py-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Detalle de Ciudad</h3>
        </div>
        <div class="card-body">
            <div class="mb-3"><strong>ID Ciudad:</strong> @Model.Ciudad.idCiudad</div>
            <div class="mb-3"><strong>Nombre:</strong> @Model.Ciudad.Nombre</div>
            <div class="mb-3"><strong>Pa√≠s:</strong> @Model.NombrePais</div>

            <hr />

            <h4>Hoteles en esta ciudad</h4>
            @if (Model.Hoteles != null && Model.Hoteles.Any())
            {
                <ul class="list-group">
                    @foreach (var hotel in Model.Hoteles)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong>@hotel.Nombre</strong> <br />
                                @hotel.Direccion <br />
                                @hotel.Telefono
                            </div>
                            <a asp-controller="Hoteles" 
                               asp-action="EditarHotel" 
                               asp-route-idHotel="@hotel.idHotel" 
                               class="btn btn-sm btn-warning">
                               Editar
                            </a>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p>No hay hoteles registrados en esta ciudad.</p>
            }
        </div>
        <div class="card-footer">
            <a asp-action="DetalleCiudadLista" class="btn btn-secondary">Volver al listado</a>
        </div>
    </div>
</div>
