@model List<TrivagoMVC.ViewModels.CiudadConPaisViewModel>

@{
    ViewData["Title"] = "Detalle de Ciudades";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Detalle de Ciudades</h2>
        <a asp-action="AltaCiudad" asp-controller="Ciudades" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nueva Ciudad
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var ciudad in Model)
            {
                <div class="col-md-6 col-lg-4 mb-3">
                    <!-- Aquí usamos <a> con asp-action/asp-controller/asp-route para generar URL correcta -->
                    <a asp-controller="Ciudades"
                       asp-action="DetalleCiudad"
                       asp-route-idCiudad="@ciudad.idCiudad"
                       class="card h-100 shadow-sm hover-shadow text-decoration-none text-body"
                       style="cursor:pointer;">
                        <div class="card-body">
                            <h5 class="card-title text-primary">@ciudad.NombreCiudad</h5>
                            <p class="card-text text-muted mb-1">
                                <small>País: @ciudad.NombrePais</small>
                            </p>
                            <p class="card-text">
                                <small>ID Ciudad: @ciudad.idCiudad</small>
                            </p>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            No hay ciudades registradas.
            <a asp-action="AltaCiudad" asp-controller="Ciudades">Agregar la primera ciudad</a>
        </div>
    }

    <div class="text-center mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Volver al Inicio</a>
    </div>
</div>

<style>
    .hover-shadow { transition: box-shadow 0.3s ease; }
    .hover-shadow:hover { box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15) !important; }
</style>
