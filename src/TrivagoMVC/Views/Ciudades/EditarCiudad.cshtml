@model TrivagoMVC.Models.EditarCiudadViewModel

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0">Editar Ciudad</h3>
                </div>
                <div class="card-body">
                    <form asp-action="EditarCiudad" method="post">
                        <input type="hidden" asp-for="idCiudad" />

                        <div class="mb-3">
                            <label asp-for="Datos.Nombre" class="form-label">Nombre</label>
                            <input asp-for="Datos.Nombre" class="form-control"/>
                            <span asp-validation-for="Datos.Nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Datos.idPais" class="form-label">País</label>
                            <select asp-for="Datos.idPais" asp-items="@(new SelectList(Model.Paises, "idPais", "Nombre"))" class="form-select">
    <option value="">--Seleccione un país--</option>
</select>
                            <span asp-validation-for="Datos.idPais" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning">Guardar Cambios</button>
                            <a asp-action="ListadoCiudad" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
