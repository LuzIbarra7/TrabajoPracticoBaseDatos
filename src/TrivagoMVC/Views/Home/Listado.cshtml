@model IEnumerable<Trivago.Core.Ubicacion.Pais>

@{
    ViewData["Title"] = "Listado de Países y Ciudades";
}

<h1>@ViewData["Title"]</h1>

@foreach (var pais in Model)
{
    <div class="card mb-3">
        <div class="card-body">
            <h3>@pais.Nombre (@(pais.Ciudades?.Count ?? 0) ciudades)</h3>

            @if (pais.Ciudades != null && pais.Ciudades.Any())
            {
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Id Ciudad</th>
                            <th>Nombre</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in pais.Ciudades)
                        {
                            <tr>
                                <td>@c.idCiudad</td>
                                <td>@c.Nombre</td>
                                <td>
                                    <a asp-action="Detalle" asp-controller="Home" asp-route-idCiudad="@c.idCiudad">Detalle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">No hay ciudades registradas para este país.</p>
            }
            <p>
                <a asp-action="Alta" asp-controller="Home" asp-route-idPais="@pais.idPais">Agregar ciudad a @pais.Nombre</a>
            </p>
        </div>
    </div>
}
