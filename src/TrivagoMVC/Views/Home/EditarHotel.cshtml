@model TrivagoMVC.Models.AltaHotelViewModel

@{
    ViewData[index: "Title"] = "Editar Hotel";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Editar Hotel</h3>
                </div>
                <div class="card-body">
                    <form asp-action="EditarHotel" method="post">
                        @Html.AntiForgeryToken()

                        <input type="hidden" asp-for="NuevoHotel.idHotel" />

                        <div class="mb-3">
                            <label class="form-label">ID Hotel</label>
                            <input asp-for="NuevoHotel.idHotel" class="form-control" readonly />
                        </div>

                        <div class="mb-3">
                            <label asp-for="SelectCiudad" class="form-label">Ciudad</label>
                            <select asp-for="SelectCiudad" asp-items="Model.Ciudades" class="form-select">
                                <option value="">Seleccione una ciudad</option>
                            </select>
                            <span asp-validation-for="SelectCiudad" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NuevoHotel.Nombre" class="form-label">Nombre</label>
                            <input asp-for="NuevoHotel.Nombre" class="form-control" />
                            <span asp-validation-for="NuevoHotel.Nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NuevoHotel.Direccion" class="form-label">Dirección</label>
                            <input asp-for="NuevoHotel.Direccion" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="NuevoHotel.Telefono" class="form-label">Teléfono</label>
                            <input asp-for="NuevoHotel.Telefono" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="NuevoHotel.URL" class="form-label">URL</label>
                            <input asp-for="NuevoHotel.URL" class="form-control" />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Guardar cambios</button>
                            <a asp-action="ListadoHotel" class="btn btn-secondary"><i class="bi bi-x-circle"></i> Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync(partialViewName: "_ValidationScriptsPartial");}
}
