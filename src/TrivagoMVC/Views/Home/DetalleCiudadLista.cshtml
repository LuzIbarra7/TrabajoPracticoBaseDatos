@model List<TrivagoMVC.Models.Ciudad>

@{
    ViewData["Title"] = "Detalle de Ciudades";
}

<style>
    .hover-shadow { transition: box-shadow 0.3s ease; }
    .hover-shadow:hover { box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15) !important; }
</style>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Detalle de Ciudades</h2>
        <a asp-action="AltaCiudad" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nueva Ciudad
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var ciudad in Model)
            {
                <div class="col-md-6 col-lg-4 mb-3">
                    <a asp-action="DetalleCiudad"
                       asp-route-idPais="@ciudad.idPais"
                       asp-route-idCiudad="@ciudad.idCiudad"
                       class="card h-100 shadow-sm hover-shadow text-decoration-none text-body">
                        <div class="card-body">
                            <h5 class="card-title text-primary">@ciudad.Nombre</h5>
                            <p class="card-text text-muted mb-1"><small>ID: @ciudad.idCiudad</small></p>
                            <div class="mt-2">
                                <span class="badge bg-secondary">@((ciudad.Hoteles != null) ? ciudad.Hoteles.Count : 0) hotel(es)</span>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <p class="mb-0">No hay ciudades registradas. <a asp-action="AltaCiudad">Agregar la primera ciudad</a></p>
        </div>
    }
</div>
