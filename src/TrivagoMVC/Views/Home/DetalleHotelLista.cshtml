@model List<TrivagoMVC.ViewModels.HotelConCiudadViewModel>

@{
    ViewData["Title"] = "Detalle de Hoteles";
}
<style>
    .hover-shadow {
        transition: box-shadow 0.3s ease;
    }
    .hover-shadow:hover {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Detalle de Hoteles</h2>
        <a asp-action="AltaHotel" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nuevo Hotel
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var hotel in Model)
            {
                <div class="col-md-6 col-lg-4 mb-3">
                    <div class="card h-100 shadow-sm hover-shadow" style="cursor: pointer;" 
                         onclick="window.location.href='@Url.Action("DetalleHotel", new { idHotel = hotel.idHotel, idCiudad = hotel.idCiudad })'">
                        <div class="card-body">
                            <h5 class="card-title text-primary">@hotel.NombreHotel</h5>
                            <p class="card-text">
                                <small class="text-muted">
                                    <i class="bi bi-geo-alt"></i> @hotel.NombreCiudad
                                </small>
                            </p>
                            <p class="card-text text-muted mb-0">
                                <small>ID: @hotel.idHotel</small>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <p class="mb-0">No hay hoteles registrados. <a asp-action="AltaHotel">Agregar el primer hotel</a></p>
        </div>
    }
</div>

