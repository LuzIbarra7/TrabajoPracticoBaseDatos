@model Trivago.Core.Ubicacion.Ciudad

@{
    ViewData[index: "Title"] = "Detalle de la Ciudad";
}

<div class="container py-4">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">@Model.Nombre</h2>
            <p><strong>Id Ciudad:</strong> @Model.idCiudad</p>
            <p><strong>Id Pa√≠s:</strong> @Model.idPais</p>

            @if (Model.Hoteles != null && Model.Hoteles.Any())
            {
                <h5>Hoteles</h5>
                <ul>
                    @foreach (var h in Model.Hoteles)
                    {
                        <li>@h.Nombre</li>
                    }
                </ul>
            }
            else
            {
                <p class="text-muted">No hay hoteles registrados para esta ciudad.</p>
            }

            <p class="mt-3">
                <a asp-action="Listado" asp-controller="Home" class="btn btn-secondary">Volver al listado</a>
            </p>
        </div>
    </div>
</div>
