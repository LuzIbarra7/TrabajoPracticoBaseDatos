@model TrivagoMVC.ViewModels.EditarUsuarioViewModel

@{
    ViewData["Title"] = "Editar Usuario";
}

<h2>Editar Usuario</h2>

<form asp-action="EditarUsuario" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label">ID Usuario</label>
        <input asp-for="Usuario.idUsuario" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input asp-for="Usuario.Nombre" class="form-control" />
        <span asp-validation-for="Usuario.Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input asp-for="Usuario.Mail" class="form-control" />
        <span asp-validation-for="Usuario.Mail" class="text-danger"></span>
    </div>

    <!-- Agregá aquí otros campos de Usuario que tengas -->

    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    <a asp-action="ListadoUsuario" class="btn btn-secondary">Cancelar</a>
</form>
