@model TrivagoMVC.ViewModels.EditarUsuarioViewModel

@{
    ViewData["Title"] = "Editar Usuario";
}

<h2>Editar Usuario</h2>

<form asp-action="EditarUsuario" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Usuario.idUsuario" />

    <div class="mb-3">
        <label class="form-label">ID Usuario</label>
        <input asp-for="Usuario.idUsuario" class="form-control" readonly />
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Usuario.Nombre" class="form-label">Nombre</label>
            <input asp-for="Usuario.Nombre" class="form-control" />
            <span asp-validation-for="Usuario.Nombre" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Usuario.Apellido" class="form-label">Apellido</label>
            <input asp-for="Usuario.Apellido" class="form-control" />
            <span asp-validation-for="Usuario.Apellido" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Usuario.Mail" class="form-label">Email</label>
        <input asp-for="Usuario.Mail" type="email" class="form-control" />
        <span asp-validation-for="Usuario.Mail" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Usuario.Contrasena" class="form-label">Contraseña (dejar vacío para no cambiar)</label>
        <input asp-for="Usuario.Contrasena" type="password" class="form-control" />
    </div>

    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Guardar cambios</button>
        <a asp-action="ListadoUsuario" class="btn btn-secondary"><i class="bi bi-x-circle"></i> Cancelar</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
