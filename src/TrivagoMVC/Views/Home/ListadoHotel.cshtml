@model List<TrivagoMVC.ViewModels.HotelesPorPaisViewModel>

@{
    ViewData["Title"] = "Listado de Hoteles";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Listado de Hoteles</h2>
        <a asp-action="AltaHotel" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nuevo Hotel
        </a>
    </div>

    @if (Model.Any())
    {
        @foreach (var paisGroup in Model)
        {
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">@paisGroup.NombrePais</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>ID Hotel</th>
                                    <th>Ciudad</th>
                                    <th>Nombre del Hotel</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var hotel in paisGroup.Hoteles)
                                {
                                    <tr>
                                        <td>@hotel.idHotel</td>
                                        <td>@hotel.NombreCiudad</td>
                                        <td>@hotel.NombreHotel</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info">
            <p class="mb-0">No hay hoteles registrados. <a asp-action="AltaHotel">Agregar el primer hotel</a></p>
        </div>
    }
</div>
