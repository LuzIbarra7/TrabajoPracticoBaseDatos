@model TrivagoMVC.ViewModels.HotelConCiudadViewModel

@{
    ViewData["Title"] = "Detalle de " + Model.NombreHotel;
}

<div class="container py-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Detalle del Hotel</h3>
        </div>
        <div class="card-body">
            <h4 class="text-primary mb-4">@Model.NombreHotel</h4>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <p><strong>ID Hotel:</strong> @Model.idHotel</p>
                </div>
                <div class="col-md-6 mb-3">
                    <p><strong>Ciudad:</strong> @Model.NombreCiudad</p>
                </div>
            </div>

            <hr />

            <div class="mb-3">
                <p><strong><i class="bi bi-geo-alt"></i> Dirección:</strong></p>
                <p class="ms-4">@Model.Direccion</p>
            </div>

            <div class="mb-3">
                <p><strong><i class="bi bi-telephone"></i> Teléfono:</strong></p>
                <p class="ms-4">@Model.Telefono</p>
            </div>

            <div class="mb-3">
                <p><strong><i class="bi bi-globe"></i> Sitio Web:</strong></p>
                <p class="ms-4">
                    <a href="@Model.URL" target="_blank" class="text-decoration-none">
                        @Model.URL <i class="bi bi-box-arrow-up-right"></i>
                    </a>
                </p>
            </div>
        </div>
        <div class="card-footer">
            <a asp-action="DetalleHotel" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver al listado
            </a>
            <a asp-action="AltaHotel" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Agregar otro hotel
            </a>
        </div>
    </div>
</div>
