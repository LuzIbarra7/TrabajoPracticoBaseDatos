@model TrivagoMVC.Models.AltaCiudadViewModel

@{
    ViewData["Title"] = "Editar Ciudad";
}

<h2>Editar Ciudad</h2>

<form asp-action="EditarCiudad" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="NuevaCiudad.idCiudad" />

    <div class="mb-3">
        <label class="form-label">ID Ciudad</label>
        <input asp-for="NuevaCiudad.idCiudad" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">País</label>
        <select asp-for="NuevaCiudad.idPais" asp-items="@(new SelectList(Model.Paises, "idPais", "Nombre"))" class="form-select">
            <option value="0">Seleccione un país</option>
        </select>
        <span asp-validation-for="NuevaCiudad.idPais" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Nombre de la ciudad</label>
        <input asp-for="NuevaCiudad.Nombre" class="form-control" />
        <span asp-validation-for="NuevaCiudad.Nombre" class="text-danger"></span>
    </div>

    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Guardar cambios</button>
        <a asp-action="ListadoCiudad" class="btn btn-secondary"><i class="bi bi-x-circle"></i> Cancelar</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
