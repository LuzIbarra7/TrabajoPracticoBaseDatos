@model TrivagoMVC.ViewModels.DetalleCiudadViewModel

@{
    ViewData["Title"] = "Detalle de " + Model.Ciudad.Nombre;
}

<div class="container py-4">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">@Model.Ciudad.Nombre</h2>
            <p><strong>Id Ciudad:</strong> @Model.Ciudad.idCiudad</p>
            <p><strong>Pa√≠s:</strong> @Model.NombrePais</p>

            @if (Model.Ciudad.Hoteles != null && Model.Ciudad.Hoteles.Any())
            {
                <h5>Hoteles</h5>
                <ul>
                    @foreach (var h in Model.Ciudad.Hoteles)
                    {
                        <li>@h.Nombre</li>
                    }
                </ul>
            }
            else
            {
                <p class="text-muted">No hay hoteles registrados para esta ciudad.</p>
            }

            <p class="mt-3">
                <a asp-action="DetalleCiudad" asp-controller="Home" class="btn btn-secondary">Volver al listado</a>
            </p>
        </div>
    </div>
</div>
